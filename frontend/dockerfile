# --- Build stage ---
FROM node:20 AS build

WORKDIR /app

# Dependencies installeren
COPY package*.json ./
RUN npm install

# Rest van de code kopiëren
COPY . .

# Angular production build
RUN npm run build-prod

# --- Runtime stage ---
FROM nginx:alpine

# Angular build output naar Nginx kopiëren
COPY --from=build /app/dist/km-tracker/browser/ /usr/share/nginx/html/

# Aangepaste nginx config voor SPA
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
